<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.android.myapplication1.MainActivity"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_marginTop="52dp"
        android:id="@+id/logo_image_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="          we help you in finding the
                   perfect match
           and live a perfect happy
                              life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logos_text_view"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/text_text_view"
        android:paddingTop="16dp"
        android:paddingLeft="16dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo3"
        android:id="@+id/imageView"
        android:layout_below="@+id/logos_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logos_text_view"
        android:padding="0dp"
        android:text="THE PERFECT WEDDING"
        android:textColor="#f39c12"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_below="@+id/logo_image_view"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
